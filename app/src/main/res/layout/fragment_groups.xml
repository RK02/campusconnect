<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaebec"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/create_group_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#ffffff">

    <TextView
        android:id="@+id/b_create_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="16dp"
        android:text="Create Group" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/b_create_group"
            android:background="#ffffff"
            android:layout_centerVertical="true"
            android:src="@mipmap/plus_black"/>
    </RelativeLayout>

   <View
       android:id="@+id/divider"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:layout_below="@+id/create_group_group"
       android:background="#eaebec" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_group_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider"
        android:background="#eaebec"
        android:clipToPadding="false"
        android:paddingBottom="?attr/actionBarSize" />

</RelativeLayout>